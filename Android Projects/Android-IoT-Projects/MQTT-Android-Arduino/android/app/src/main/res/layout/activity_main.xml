<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <!--====================================================================================-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/led_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_led"
            android:tint="@color/blue" />

        <Switch
            android:id="@+id/led_blue_onoff_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/status_led_blue"
            style="@style/MainActivity_TextView" />

    </LinearLayout>

    <!--====================================================================================-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/led_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_led"
            android:tint="@color/green" />

        <Switch
            android:id="@+id/led_green_onoff_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/status_green_red"
            style="@style/MainActivity_TextView" />

    </LinearLayout>

    <!--====================================================================================-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/led_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_led"
            android:tint="@color/red" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/led_red_onoff_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/status_led_red"
            style="@style/MainActivity_TextView" />

    </LinearLayout>

    <!--====================================================================================-->


</LinearLayout>